<script src="~/js/chart.js"></script>
<div style="width: 250px;">
        <canvas id="monGraphique"></canvas>
    </div>
    
    <script>
        // Données du graphique (vous pouvez les remplacer par vos propres données)
        var donnees = {
            labels: ["Femme", "Homme"],
            datasets: [{
                label: 'Statistique',
                backgroundColor: ['rgba(255, 99, 132, 0.5)', 'rgba(54, 162, 235, 0.5)'],
                borderColor: ['rgba(255, 99, 132, 1)', 'rgba(54, 162, 235, 1)'],
                borderWidth: 1,
                data: [10, 30] // Correction : tableau de données fermé correctement
            }]
        };

        // Récupérer le contexte du canevas
        var ctx = document.getElementById('monGraphique').getContext('2d');

        // Créer le graphique à barres
        var monGraphique = new Chart(ctx, {
            type: 'pie',
            data: donnees,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Distribution par genre'
                    }
                }
            }
        });
    </script>
