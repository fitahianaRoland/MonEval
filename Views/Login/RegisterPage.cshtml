@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='../boxicons-2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="../sass/login.css">
    <link rel="stylesheet" href="../sass/header.css">
    <title>Document</title>
</head>
<body>
    <!-- login register -->
    <div id="login_content">
        <div id="item_content">
            <img src="../img/logoEval.png" alt="" class="login_image">
            <form asp-action="RegisterBase" asp-controller="Login">
                <div class="champ">
                    <p>Full name<span>*</span></p>
                    <input type="text" placeholder="Enter your full name ." name="name" required>
                </div>
                <div class="champ">
                    <p>Last name<span>*</span></p>
                    <input type="text" placeholder="Enter your last name ." name="lastName" required>
                </div>
                <div class="champ">
                    <p>Email<span>*</span></p>
                    <input type="email" placeholder="Enter your Email ." name="email" required>
                </div>
                <div class="champ">
                    <p>Date de naissance<span>*</span></p>
                    <input type="date" placeholder="DD/MM/YYY" name="dateNaissance" required>
                </div>
                <div class="champ">
                    <p>genre<span>*</span></p>
                    <select name="genre" id="genre">
                        <option value="">homme</option>
                        <option value="">femme</option>
                    </select>
                </div>
                <div class="champ">
                    <p>Password<span>*</span></p>
                    <input type="password" placeholder="Enter your password ." name="password" required>
                </div>
                <div class="champ">
                    <input type="password" placeholder="confirme password ****" name="passwordConfirm" required>
                </div>
                    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                    {
                        <div><label 
                        style="color: red;font-size: small; text-decoration: underline;">
                        @ViewData["ErrorMessage"]
                        </label>
                        </div>
                    }
                <button type="submit">Sign in</button>
            </form>
            <div class="not_registered">
                <p><span>Have an account yet?</span><span class="create_account"><a href="@Url.Action("LoginPage", "Login")" style="text-decoration:none;"> login?</a></span></p>
            </div>
        </div>
    </div>
</body>
</html>