@{
    ViewData["Title"] = "Home Page";
}
<div class="list_container">
    <a asp-action="ListTravauxPage" asp-controller="Travaux" class="bouton_lien">
        <div class="interne_bouton">
            <i class='bx bx-chevron-left-circle' style="height: 11px;"></i>
            <label>retour</label>
        </div>
    </a>
    <div class="title_content">
        <p>modifier travaux</p>
    </div>
</div>


<div id="formulaire_content">
        <div id="item_content">
            <form asp-action="UpdatetravauxBase" asp-controller="Travaux">
                <input type="hidden" name="id" value="@ViewBag.listTravaux.Id">
                <div class="champ">
                    <p>Code<span>*</span></p>
                    <input type="number" name="code" value="@ViewBag.listTravaux.CodeTravaux" required>
                </div>
                <div class="champ">
                    <p>Designation<span>*</span></p>
                    <input type="text"  name="designation" value="@ViewBag.listTravaux.Designation" required>
                </div>
                <div class="champ">
                    <p>prix unitaire<span>*</span></p>
                    <input type="number"  name="prix_unitaire" value="@ViewBag.listTravaux.PrixUnitaire" required>
                </div>
                @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                    {
                        <div><label 
                        style="color: red;font-size: small; text-decoration: underline;">
                        @ViewData["ErrorMessage"]
                        </label>
                        </div>
                    }
                <button type="submit">Update</button>
            </form>
            @* <div class="not_registered">
                <p><span>Have an account yet?</span><span class="create_account"><a href="@Url.Action("LoginPage", "Login")" style="text-decoration:none;"> login?</a></span></p>
            </div> *@
        </div>
    </div>