@{
    ViewData["Title"] = "Home Page";
}
<div class="list_container">
    <a asp-action="ListEtapePageAdmin" asp-controller="Etape" class="bouton_lien">
        <div class="interne_bouton">
            <i class='bx bx-chevron-left-circle' style="height: 11px;"></i>
            <label>retour</label>
        </div>
    </a>
    <div class="title_content">
        <p>Ajouter temps coureurs</p>
    </div>
</div>


<div id="formulaire_content">
    <div id="item_content">
        <form asp-action="InsertionTempsCoureur" asp-controller="TempsCoureur">
            <div class="champ">
                <p>heure debut<span>*</span></p>
                <input type="datetime-local" name="heure_debut" required>
            </div>
            <div class="champ">
                <p>heure arrive<span>*</span></p>
                <input type="datetime-local" name="heure_arrive" required>
            </div>
            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                {
                    <div><label 
                    style="color: red;font-size: small; text-decoration: underline;">
                    @ViewData["ErrorMessage"]
                    </label>
                    </div>
                }
            <button type="submit">Add</button>
        </form>
        @* <div class="not_registered">
            <p><span>Have an account yet?</span><span class="create_account"><a href="@Url.Action("LoginPage", "Login")" style="text-decoration:none;"> login?</a></span></p>
        </div> *@
    </div>
</div>